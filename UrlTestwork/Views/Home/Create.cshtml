@model UrlTestwork.Models.CuttLink
@{
    ViewBag.Title = "Создание сокращенной URL";
}
<div class="validation" asp-validation-summary="ModelOnly"></div>
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label class="control-label">Ваш URL</label>
        <input required placeholder="Введите ваш URL.." type="text" name="url" class="form-control" />        
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>